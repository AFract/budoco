@page
@model UserModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Home page";
}
<div>
    @{
        if (Model.HttpContext.Response.StatusCode == 200)
        {
            <div class="flash">@bd_util.get_flash(Model.HttpContext)</div>
        }

    }

    <div>
        <a href="Users">Back to Users</a>
    </div>

    <form method="post">
        <div>id<input asp-for="id" value="@Model.id" disabled></input>
        </div>
        <div>username<input asp-for="username" value="@Model.username"></input>
        </div>
        <div>
            @{
                string button_text = (@Model.id == 0) ? "Create" : "Update";
            }

            <button type="submit">@button_text</button>
        </div>
    </form>
</div>
