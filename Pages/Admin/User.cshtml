@page
@model UserModel
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Users";
}

<h1>Update User</h1>
<partial name="_FlashPartial" />

<div>
    <a href="Users">Back to Users</a>
</div>

<div class="form_div"></div>
<form method="post">

    <div>
        <label>Id</label>
        <input asp-for="id" value="@Model.id" disabled></input>
    </div>
    <div>
        <label>Username</label>
        <input asp-for="username" value="@Model.username"></input>
    </div>
    <div>
        <label>Email</label>
        <input asp-for="email" value="@Model.email"></input>
    </div>
    <div>
        <label>Admin</label>
        <input asp-for="is_admin" value="true" />
    </div>
    <div>
        <label>Active</label>
        <input asp-for="is_active" value="true" />
    </div>
    <div>
        <label>Report Only</label>
        <input asp-for="is_report_only" value="true" />
    </div>
    <div>
        <label>Organization</label>
        <select asp-for="organization_id" asp-items="@Model.organizations">
            <option value=0>None</option>
        </select>
    </div>    
    <div>
        <button type="submit">Update</button>
    </div>
</form>
</div>

@section Scripts {
    
}

